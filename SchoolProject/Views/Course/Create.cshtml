
<div class="container">
    <form action="Create" method="post">
        <div class="row">
            <div class="col-25">
                <label for="name">Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="CourseName" name="CourseName" placeholder="Course Name" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="age">Capacity</label>
            </div>
            <div class="col-75">
                <input type="text" id="CourseCapacity" name="CourseCapacity" placeholder="Course Capacity" />
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="Teacher">Teacher</label>
            </div>
            <div class="col-75">

                <select id="Teacher" name="TeacherId">
                    @foreach(Teacher teacher in Model)
                    {
                        <option value="@teacher.TeacherId">@teacher.TeacherName</option>
                    }
                </select>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Submit" />
        </div>

    </form>
</div>